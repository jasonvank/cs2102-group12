    <div class="ftco-section-reservation">
      <div class="container">
        <div class="row">
          <div class="col-md-12 reservation pt-5 px-5">
            <div class="block-17">
              <form action="" method="post" class="d-block d-lg-flex">
                <div class="fields d-block d-lg-flex">

                  <div class="textfield-name one-third"><input type="text" class="form-control" name="rest_name" id="rest_name" placeholder="Restaurant Name"></div>

                  <div class="textfield-phone one-third">
                    <select class="form-control" name="location" placeholder="Location">
                      <option class="selectcontents" value="Anywhere">Anywhere</option>
                      <option class="selectcontents" value="West">West</option>
                      <option class="selectcontents" value="East">East</option>
                      <option class="selectcontents" value="North">North</option>
                      <option class="selectcontents" value="South">South</option>
                      <option class="selectcontents" value="Central">Central</option>
                    </select>
                  </div>

                  <div class="book-date one-third">
                    <select class="form-control" name="cuisines">
                      <option class="selectcontents" value="Anything">Anything</option>
                      <option class="selectcontents" value="Chinese">Chinese</option>
                      <option class="selectcontents" value="Western">Western</option>
                      <option class="selectcontents" value="Korean">Korean</option>
                      <option class="selectcontents" value="Indian">Indian</option>
                      <option class="selectcontents" value="Japanese">Japanese</option>
                    </select>
                  </div>

                  <div class="book-time one-third">
                    <input type="text" name="book_time" id="book_time" class="form-control" placeholder="Time">
                  </div>

                </div>
                <input type="submit" class="search-submit btn btn-primary" value="Search">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

