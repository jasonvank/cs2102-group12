<!DOCTYPE html>
<html>
<head>
    <title>select which item to edit</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>

  <p id="para"></p>

<div>

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> select which item to edit</h1>
    </div>
    <div class="container">
      <table class='table table-bordered table-condensed table-striped table-hover'>
     <thead>
          <tr >
               <th scope="col"> Item name</th>
               <th scope="col"> Item price</th>
               <th scope="col"> Item description</th>
          </tr>
     </thead>
     <tbody>
       <tbody style="cursor:pointer" >
          <% for(var i=0; i<data.rows.length; i++) { %>
          <tr onclick=content(this)>
               <td id = 'td1' ><%= data.rows[i].name%></td>
               <td id = 'td2' ><%= data.rows[i].price%></td>
               <td id = 'td2' ><%= data.rows[i].description%></td>
          </tr>
          <% } %>
     </tbody>
</table>

<script>
function content(elem) {
  var startingPosition = elem.innerHTML.indexOf("1") + 3;
  var endPosition = elem.innerHTML.indexOf("</td>");
  var name = elem.innerHTML.substring(startingPosition, endPosition);
  document.getElementById("item_name").value = name;
}
</script>

		<form class="form-detail" action="" method="post">
<div class="form-row">
  <label for="Enter the item name">Selected item</label>
  <input type="name" id="item_name" name="item_name" placeholder="item name from above"  style="width: 300px" required="required">
</div>

<div class="form-row-last">
  <input type="submit" name="submit" class="submit" value="submit">
</div>
      </form>

    </div>

</div>
</body>
</html>
