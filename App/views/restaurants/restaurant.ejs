  <%- include ../templates/header.ejs %>
  <body>
    <%- include ../templates/navbar_for_restaurants.ejs %>
    <section class="home-slider owl-carousel">
      <div class="slider-item" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
          <div class="row slider-text align-items-center justify-content-center">
            <div class="col-md-10 col-sm-12 ftco-animate text-center">
              <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Menu</span></p>
              <h1 class="mb-3">Choose your restaurants</h1>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="ftco-section-reservation">
      <div class="container">
        <div class="row">
          <div class="col-md-12 reservation pt-5 px-5">
            <div class="block-17">
              <form action="" method="post" class="d-block d-lg-flex">
                <div class="fields d-block d-lg-flex">

                  <div class="textfield-name one-third"><input type="text" class="form-control" placeholder="Name"></div>

                  <div class="textfield-phone one-third"><input type="text" class="form-control" placeholder="Phone"></div>

                  <div class="book-date one-third"><input type="text" id="book_date" class="form-control" placeholder="M/D/YYYY"></div>

                  <div class="book-time one-third">
                    <input type="text" id="book_time" class="form-control" placeholder="Time">
                  </div>

                  <div class="select-wrap one-third">
                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                    <select name="" id="" class="form-control">
                      <option value="">Person</option>
                      <option value="">1</option>
                      <option value="">2</option>
                      <option value="">3</option>
                      <option value="">4+</option>
                    </select>
                  </div>
                </div>
                <input type="submit" class="search-submit btn btn-primary" value="Book a table">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section bg-light">
      <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
          <div class="col-md-7 text-center heading-section ftco-animate">
            <span class="subheading">Our Restaurants</span>
            <h2>Choose your restaurants</h2>
          </div>
        </div>

      <table class='table table-bordered table-condensed table-striped table-hover'>
       <thead>
            <tr >
                 <th scope="col"> Restaurant name</th>
                 <th scope="col"> Restaurant address</th>
                 <th scope="col"> Restaurant open_time</th>
                 <th scope="col"> Restaurant close_time</th>
                 <th scope="col"> Restaurant contacts</th>
            </tr>
       </thead>
       <tbody>
         <tbody style="cursor:pointer" >
            <% for(var i=0; i<data.passedData.rows.length; i++) { %>
            <tr onclick=content(this)>
                 <td id = 'td1'><%= data.passedData.rows[i].name%></td>
                 <td id = 'td1'><%= data.passedData.rows[i].address%></td>
                 <td id = 'td1'><%= data.passedData.rows[i].open_time%></td>
                 <td id = 'td1'><%= data.passedData.rows[i].close_time%></td>
                 <td id = 'td1'><%= data.passedData.rows[i].contacts%></td>
            </tr>
            <% } %>
       </tbody>
  </table>

  <script>
  function content(elem) {
    var startingPosition = elem.innerHTML.indexOf("1") + 3;
    var endPosition = elem.innerHTML.indexOf("</td>");
    var name = elem.innerHTML.substring(startingPosition, endPosition);
    document.getElementById("restaurant_name").value = name;
  }
  </script>

  <form class="form-detail" action="" method="post">
<div class="form-row">
<label for="Enter the restaurant name">Selected restaurant name</label>
<input type="name" id="restaurant_name" name="restaurant_name" placeholder="restaurant name from above"  style="width: 300px" required="required">
</div>

<div class="form-row-last">
<input type="submit" name="submit" class="submit" value="submit">
</div>
    </form>

